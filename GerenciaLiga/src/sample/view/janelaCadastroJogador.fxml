<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.controler.ControlerJanelaCadastroJogador"
            prefHeight="400.0" prefWidth="600.0">

    <content>
        <GridPane vgap="10" hgap="10" alignment="CENTER">
            <Text text="Nome"
                  GridPane.rowIndex="0"
                  GridPane.columnIndex="0"/>
            <TextField fx:id="tfNome"
                       GridPane.rowIndex="0"
                       GridPane.columnIndex="1"/>

            <Text text="Peso"
                  GridPane.rowIndex="1"
                  GridPane.columnIndex="0"/>
            <TextField fx:id="tfPeso"
                       GridPane.rowIndex="1"
                       GridPane.columnIndex="1"/>

            <Text text="Altura"
                  GridPane.rowIndex="2"
                  GridPane.columnIndex="0"/>
            <TextField fx:id="tfAltura"
                       GridPane.rowIndex="2"
                       GridPane.columnIndex="1"/>

        </GridPane>

    </content>

</DialogPane>
